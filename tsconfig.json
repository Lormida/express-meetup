{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "target": "ES5",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "lib": ["ES2020"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
